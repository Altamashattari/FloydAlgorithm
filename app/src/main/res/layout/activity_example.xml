<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.example.dell.floydalgorithm.example">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/fw1"
        android:layout_marginTop="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView10" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/fw2"
        android:layout_below="@+id/textView9"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        app:srcCompat="@mipmap/fw3"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:srcCompat="@mipmap/fw4"
        android:layout_below="@+id/textView11"
        android:layout_alignStart="@+id/imageView5" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        app:srcCompat="@mipmap/fw5"
        android:layout_below="@+id/textView12"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/fw6"
        android:layout_marginBottom="7dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imageView5" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Input Graph"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/imageView3" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:paddingLeft="5dp"
        android:text="Before the first Iteration of the outer for loop for k,the only known path corresponds to the single edges in the graph"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="8sp"
        android:textStyle="bold"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView2"
        android:layout_marginStart="7dp"
        android:textColor="@android:color/holo_green_dark"
        android:layout_marginTop="13dp"
        android:fontFamily="serif"
        android:text="At k=0, paths that go through the vertex 0 are found: in particular, the path [1, 0, 2] is found replacing the path [1,2] which has fewer edges but is costly."
        android:textSize="8sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:textColor="@android:color/holo_green_dark"
        android:fontFamily="serif"
        android:paddingLeft="5dp"
        android:text="At k = 1, paths going through the vertices {0,1} are found. The below figure shows how the path [3, 1, 0, 2] is assembled from the two known paths [3, 1] and [1, 0, 2] encountered in previous iterations with 1 in the intersection. The path [3, 1, 2] is not considered, because [1, 0, 2] is the shortest path encountered so far from 1 to 2."
        android:textSize="8sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView10"
        android:layout_below="@+id/imageView4"
        android:textColor="@android:color/holo_green_dark"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="serif"
        android:text="At k= 2, path going through the vertices {0,1,2}  are found"
        android:textSize="8sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView10"
        android:textColor="@android:color/holo_green_dark"
        android:layout_below="@+id/imageView5"
        android:layout_marginTop="24dp"
        android:fontFamily="serif"
        android:text="Finally , at k = 3, all shortest paths are found."
        android:textSize="8sp"
        android:textStyle="bold" />
</RelativeLayout>
